<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="product-show">
      <div class="product-image">
        <div class=""><%image = @product.img%><%= image_tag (image) %></div>
      </div>
      <div class="product-details">
        <div>
          <strong>
          <h1><%=@product.name%></h1>
        </strong>
          <p>
            <%= @product.description %>
          </p>
          <ul>
            <li>
              <strong>Light:</strong><%= @product.light %>
            </li>
            <li>
              <strong>Water:</strong><%= @product.watering %>
            </li>
            <li>
              <strong>Temp:</strong>><%= @product.temp %>
            </li>
            <li>
              <%if !!@product.pet_friendly %>
                <strong><p>Pet Friendly ğŸ¶ğŸ±</p></strong>
              <%else%>
                <strong><p>Not Pet Friendly!!!</p></strong>
              <%end%>
            </li>
          </ul>
        </div>
      <div class="admin-buttons">
        <% if !!current_user && current_user.role === "admin"%>
        <div >
          <%= link_to 'Edit this product', edit_product_path(@product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        </div>
          <div >
            <%= button_to 'Destroy this product', product_path(@product), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
          </div>
          <div>
          <%= link_to 'Back to products', products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          </div>
          <% else %>
          <strong>
            <%= @product.price %>
            <%=button_to "Add to cart",line_items_path(:product_id => @product.id),
               form: {data: {turbo_confirm: 'Add to Cart?'}}%>
          </strong>
          <%end%>
      </div>

      </div>
    </div>

    </div>
</div>
