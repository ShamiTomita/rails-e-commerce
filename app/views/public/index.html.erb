<div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% if current_user%>
    <% if current_user.role === "admin" %>
      <h1 class="text-3xl font-bold underline">
        Welcome Admin!
      </h1>
    <%else%>
      <h1 class="text-3xl font-bold underline">
        Hello!
      </h1>
    <%end%>
  <%else%>
<h1>Please Sign Up Or Login To Shop!</h1>
  <%end%>
  <div class="grid grid-cols-3 gap-4">
    <div data-controller="slideshow">

      <% @array.each do |item| %>
      <div data-slideshow-target="slide">
        <div class="w-full h-full object-center object-cover lg:w-full lg:h-full"><%image = item.img%><%= image_tag (image), :class=>"w-full h-full object-center object-cover lg:w-96 lg:h-96" %></div>
        <%=item.name%>
      </div>
      <%end%>
      <button data-action="slideshow#previous"> ← </button>
      <button data-action="slideshow#next"> → </button>
    </div>
  </div>
</div>
