<div class="flex flex-col text-center m-5">
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<% if current_user%>
  <% if current_user.role === "admin" %>
    <h1 class="text-3xl font-bold underline">
      Welcome Admin!
    </h1>
  <%else%>
    <h1 class="text-3xl font-bold underline">
      Plants R Us!
    </h1>
  <%end%>
<%else%>

<%end%>
<div class="flex justify-center flex-row m-5">
  <div></div>
  <div class="">
    <div data-controller="slideshow">

      <% @array.each do |item| %>
      <div data-slideshow-target="slide">
        <div class="w-full h-full object-center object-cover lg:w-full lg:h-full"><%image = item.img%><%= image_tag (image), :class=>"w-full h-full object-center object-cover lg:w-96 lg:h-96" %></div>
        <%=item.name%>
      </div>
      <%end%>
      <button data-action="slideshow#previous"> ← </button>
      <button data-action="slideshow#next"> → </button>
    </div>
  </div>
  <div></div>
</div>
</div>
