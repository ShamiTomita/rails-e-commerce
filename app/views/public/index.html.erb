<div class="flex flex-col text-center m-5">
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

    <%=link_to products_path do%>
      <h1 class="text-3xl text-slate-700 font-bold">
        Welcome to the Plant Shop!
      </h1>
      <%end%>

<div class="flex justify-center flex-row m-5">
    <section class="animated-grid">
      <% @array.each do |item| %> 
        <div
          class="card"
          style='background-image:url("<%=item.img%>")'
        ><%image=item.img%>
          <%= image_tag (image), :class=>"" %></div>
      <%end%>
      <div
        class="card"
      ><div class="card" data-controller="slideshow">
          <h1>Animated Grid</h1>
          <% @array.each do |item| %>
            <%=link_to product_path(item) do%>
              <div data-slideshow-target="slide">
                <div class="w-full h-full object-center object-cover lg:w-full lg:h-full">
                  <%image=item.img%>
                    <%= image_tag (image), :class=>"" %>
                </div>
                <%=item.name%>
              </div>
              <%end%>
          <%end%>
          <button data-action="slideshow#previous"> ← </button>
          <button data-action="slideshow#next"> → </button>
        </div>
    </section>
</div>
</div>
