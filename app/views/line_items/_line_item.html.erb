<li id="<%= dom_id line_item %>">
<div class="flex flex-col justify-center">
<strong>
  <p class="my-5">
    <%= line_item.product.name %>
  </p>
  </strong>
  <div class="w-12 ">
  <%image = line_item.product.img%><%= image_tag (image) %>
  </div>
    Quanitity:
    <div class="flex">
    <p class="flex flex-row">
      <div class="p-4">
    <%= button_to "+", line_item_add_path(:id => line_item), method: :post %>
      </div>
      <div class="p-4">
    <%= line_item.quantity %>
      </div>
      <div class="p-4">
    <%= button_to "-", line_item_reduce_path(:id => line_item), method: :post %>
    </div>
    </p>
    </div>
    Item Total: <%= line_item.total_price %>


</div>
</li>
