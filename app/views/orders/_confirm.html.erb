<div class="flex flex-row">
  <div class="h-96 w-96 border-8 border-sky-100 overflow-scroll">
    <h2>Your Order</h2>
    <% @order.order_items.each do |item| %>
    <p><%image = item.product.img%><%= image_tag (image), class: "w-16" %></p>
    <p>Item: <%= item.product.name %></p>
    <p>Quantity: <%= item.quantity %> Price: <%= item.total_price %></p>
    <%end%>
    <strong>Order Total: <%=order.total%></strong>
  </div>
  <div class="mx-8 flex-col">
    <strong><h2>Your Shipping Info:</h2></strong>
    <ol>
    <li>Name: <%= @order.first_name %> <%=@order.last_name %></li>
    <li>Email: <%= @order.email %></li>
    <li>Shipping Address: <%= @order.street_address %> <%= @order.city%> <%= @order.state %> <%= @order.zipcode %></li>
    <li><%#= @order.status%></li>
    <% if @order.status != "not_ordered"%>
    <li><p>Payment Confirmed</p></li>
    <%end%>
    </ol>
  </div>
</div>
